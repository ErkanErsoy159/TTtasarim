@{
    ViewData["Title"] = "Ödeme Geçmişi";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-history"></i> Ödeme Geçmişi</h2>
                <a href="@Url.Action("Index")" class="btn btn-primary">
                    <i class="fas fa-arrow-left"></i> Fatura Sorgulama
                </a>
            </div>

            <!-- Hata Mesajları -->
            @if (ViewBag.Hata != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle"></i> @ViewBag.Hata
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- İstatistikler -->
            @if (ViewBag.PaymentHistory != null)
            {
                var payments = ViewBag.PaymentHistory as List<TTtasarim.Web.Controllers.PaymentHistoryDto>;
                var totalPayments = payments?.Count ?? 0;
                var totalAmount = payments?.Sum(p => p.Amount) ?? 0;

                <div class="row mb-4">
                    <div class="col-md-4">
                        <div class="card text-white bg-info">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h6 class="card-title">Toplam İşlem</h6>
                                        <h3 class="mb-0">@totalPayments</h3>
                                    </div>
                                    <div class="align-self-center">
                                        <i class="fas fa-file-invoice fa-2x"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card text-white bg-success">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h6 class="card-title">Toplam Ödenen</h6>
                                        <h3 class="mb-0">@totalAmount.ToString("C2", new System.Globalization.CultureInfo("tr-TR"))</h3>
                                    </div>
                                    <div class="align-self-center">
                                        <i class="fas fa-lira-sign fa-2x"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card text-white bg-primary">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h6 class="card-title">Son 30 Gün</h6>
                                        <h3 class="mb-0">@(payments?.Where(p => DateTime.TryParse(p.TransactionDate.Split(' ')[0], out DateTime date) && date >= DateTime.Now.AddDays(-30)).Count() ?? 0)</h3>
                                    </div>
                                    <div class="align-self-center">
                                        <i class="fas fa-calendar fa-2x"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <!-- Ödeme Geçmişi Tablosu -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-list"></i> Ödeme Kayıtları
                        @if (ViewBag.Message != null)
                        {
                            <small class="text-muted">(@ViewBag.Message)</small>
                        }
                    </h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.PaymentHistory != null && ((List<TTtasarim.Web.Controllers.PaymentHistoryDto>)ViewBag.PaymentHistory).Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th><i class="fas fa-calendar"></i> Tarih</th>
                                        <th><i class="fas fa-building"></i> Şirket</th>
                                        <th><i class="fas fa-phone"></i> Abone No</th>
                                        <th><i class="fas fa-lira-sign"></i> Tutar</th>
                                        <th><i class="fas fa-store"></i> Bayi</th>
                                        <th><i class="fas fa-receipt"></i> İşlem ID</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var payment in (List<TTtasarim.Web.Controllers.PaymentHistoryDto>)ViewBag.PaymentHistory)
                                    {
                                        <tr>
                                            <td>
                                                <span class="badge bg-info">@payment.TransactionDate</span>
                                            </td>
                                            <td>
                                                <strong class="text-primary">@payment.CompanyName</strong>
                                            </td>
                                            <td>
                                                <code>@payment.AccessNo</code>
                                            </td>
                                            <td>
                                                <strong class="text-success">
                                                    @payment.Amount.ToString("C2", new System.Globalization.CultureInfo("tr-TR"))
                                                </strong>
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary">@payment.DealerName</span>
                                            </td>
                                            <td>
                                                <small class="text-muted font-monospace">
                                                    @payment.Id.Substring(0, 8)...
                                                </small>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Sayfalama için yer tutucu -->
                        <div class="mt-3">
                            <small class="text-muted">
                                Son 50 işlem gösterilmektedir
                            </small>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-receipt fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Henüz ödeme kaydı bulunmuyor</h5>
                            <p class="text-muted">
                                İlk fatura ödemenizi yaptığınızda buraya kaydedilecektir.
                            </p>
                            <a href="@Url.Action("Index")" class="btn btn-primary">
                                <i class="fas fa-search"></i> Fatura Sorgula
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    // Tablo sıralama (basit)
    document.querySelectorAll('th').forEach(header => {
        header.style.cursor = 'pointer';
        header.addEventListener('click', function() {
            const table = this.closest('table');
            const tbody = table.querySelector('tbody');
            const rows = Array.from(tbody.querySelectorAll('tr'));
            const index = Array.from(this.parentNode.children).indexOf(this);
            
            const sortedRows = rows.sort((a, b) => {
                const aText = a.children[index].textContent.trim();
                const bText = b.children[index].textContent.trim();
                return aText.localeCompare(bText, 'tr', { numeric: true });
            });
            
            // Toggle sort direction
            if (this.classList.contains('sorted-asc')) {
                sortedRows.reverse();
                this.classList.remove('sorted-asc');
                this.classList.add('sorted-desc');
            } else {
                this.classList.remove('sorted-desc');
                this.classList.add('sorted-asc');
            }
            
            // Clear other headers
            this.parentNode.querySelectorAll('th').forEach(th => {
                if (th !== this) {
                    th.classList.remove('sorted-asc', 'sorted-desc');
                }
            });
            
            // Re-append sorted rows
            sortedRows.forEach(row => tbody.appendChild(row));
        });
    });
</script>

<style>
    th.sorted-asc::after {
        content: ' ↑';
        color: #007bff;
    }
    th.sorted-desc::after {
        content: ' ↓';
        color: #007bff;
    }
</style>
}