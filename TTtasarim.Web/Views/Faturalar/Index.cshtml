@{
    ViewData["Title"] = "Fatura Sorgulama ve Ödeme";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-file-invoice-dollar"></i> Fatura Sorgulama ve Ödeme</h2>
                <div class="d-flex align-items-center">
                    <!-- Ödeme Geçmişi Butonu -->
                    <a href="@Url.Action("FaturaOdemeRaporlari", "Raporlar")" class="btn btn-outline-info mr-3">
                        <i class="fas fa-history"></i> Ödeme Geçmişi
                    </a>
                    
                    @if (ViewBag.CreditStatus != null)
                    {
                        <div class="badge bg-info fs-6">
                            <i class="fas fa-wallet"></i>
                            @(((dynamic)ViewBag.CreditStatus).DealerName): @(((dynamic)ViewBag.CreditStatus).FormattedCredit)
                        </div>
                    }
                </div>
            </div>

            <!-- Hata/Başarı Mesajları -->
            @if (ViewBag.Hata != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle"></i> @ViewBag.Hata
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Dynamic Alert Container -->
            <div id="alertContainer"></div>

            <!-- Kredi Durumu Card -->
            @if (ViewBag.CreditStatus != null)
            {
                <div class="card mb-4 border-info">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-md-4">
                                <h6 class="text-info mb-1">
                                    <i class="fas fa-building"></i> Atanmış Bayi
                                </h6>
                                <strong>@(((dynamic)ViewBag.CreditStatus).DealerName)</strong>
                                <small class="text-muted">(@(((dynamic)ViewBag.CreditStatus).DealerCode))</small>
                            </div>
                            <div class="col-md-4 text-center">
                                <h6 class="text-success mb-1">
                                    <i class="fas fa-coins"></i> Mevcut Kredi
                                </h6>
                                <h4 class="text-success mb-0" id="currentCreditDisplay">
                                    @(((dynamic)ViewBag.CreditStatus).FormattedCredit)
                                </h4>
                            </div>
                            <div class="col-md-4 text-md-end">
                                <a href="@Url.Action("FaturaOdemeRaporlari", "Raporlar")" class="btn btn-sm btn-outline-secondary">
                                    <i class="fas fa-history"></i> Ödeme Geçmişim
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <!-- Fatura Sorgulama Formu -->
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-search"></i> Fatura Sorgula
                    </h5>
                </div>
                <div class="card-body">
                    <form id="invoiceQueryForm">
                        <div class="row">
                            <div class="col-md-5">
                                <div class="mb-3">
                                    <label for="companySelect" class="form-label">
                                        <i class="fas fa-building"></i> Şirket Seçin *
                                    </label>
                                    <select class="form-select" id="companySelect" required>
                                        <option value="">-- Şirket Seçiniz --</option>
                                        @foreach (var company in (ViewBag.Companies as List<TTtasarim.Web.Models.CompanyViewModel>) ?? new List<TTtasarim.Web.Models.CompanyViewModel>())
                                        {
                                            <option value="@company.Id">@company.Name (@company.Code)</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-5">
                                <div class="mb-3">
                                    <label for="accessNo" class="form-label">
                                        <i class="fas fa-phone"></i> Abone / Telefon Numarası *
                                    </label>
                                    <input type="text" class="form-control" id="accessNo" 
                                           placeholder="Örn: 5551234567" required
                                           pattern="[0-9]+" title="Sadece rakam giriniz">
                                    <div class="form-text">
                                        <i class="fas fa-info-circle"></i>
                                        Telefon numaranızı veya abone numaranızı rakam olarak girin
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="mb-3">
                                    <label class="form-label">&nbsp;</label>
                                    <button type="submit" class="btn btn-primary w-100" id="queryButton">
                                        <i class="fas fa-search"></i> Sorgula
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Loading Spinner -->
            <div id="loadingSpinner" class="text-center py-5" style="display: none;">
                <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
                    <span class="visually-hidden">Yükleniyor...</span>
                </div>
                <h5 class="mt-3 text-primary">Faturalar sorgulanıyor...</h5>
                <p class="text-muted">Lütfen bekleyin</p>
            </div>

            <!-- Fatura Sonuçları -->
            <div id="invoiceResults" style="display: none;">
                <div class="card">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-file-invoice"></i> 
                            <span id="invoiceCount">0</span> Adet Fatura Bulundu
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th><i class="fas fa-building"></i> Şirket</th>
                                        <th><i class="fas fa-file-alt"></i> Açıklama</th>
                                        <th><i class="fas fa-lira-sign"></i> Tutar</th>
                                        <th><i class="fas fa-calendar"></i> Vade Tarihi</th>
                                        <th><i class="fas fa-info-circle"></i> Durum</th>
                                        <th width="120"><i class="fas fa-cogs"></i> İşlem</th>
                                    </tr>
                                </thead>
                                <tbody id="invoiceTableBody">
                                    <!-- AJAX ile doldurulacak -->
                                </tbody>
                            </table>
                        </div>
                        

                    </div>
                </div>
            </div>

            <!-- No Results -->
            <div id="noResults" class="alert alert-warning" style="display: none;">
                <div class="text-center py-4">
                    <i class="fas fa-search fa-3x text-warning mb-3"></i>
                    <h5>Fatura Bulunamadı</h5>
                    <p class="mb-0">
                        Girilen şirket ve abone numarasına göre ödenmemiş fatura bulunamadı.
                        <br>
                        Lütfen bilgileri kontrol edip tekrar deneyin.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Ödeme Onay Modal -->
<div class="modal fade" id="paymentModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-warning">
                <h5 class="modal-title text-dark">
                    <i class="fas fa-credit-card"></i> Fatura Ödeme Onayı
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-12">
                        <table class="table table-borderless">
                            <tr>
                                <td><strong>Şirket:</strong></td>
                                <td id="paymentCompany">-</td>
                            </tr>
                            <tr>
                                <td><strong>Açıklama:</strong></td>
                                <td id="paymentDescription">-</td>
                            </tr>
                            <tr>
                                <td><strong>Abone No:</strong></td>
                                <td id="paymentAccessNo">-</td>
                            </tr>
                            <tr>
                                <td><strong>Vade Tarihi:</strong></td>
                                <td id="paymentDueDate">-</td>
                            </tr>
                            <tr class="table-warning">
                                <td><strong>Ödenecek Tutar:</strong></td>
                                <td><h5 class="text-danger mb-0" id="paymentAmount">₺0,00</h5></td>
                            </tr>
                        </table>
                    </div>
                </div>

                <input type="hidden" id="selectedInvoiceId">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times"></i> İptal
                </button>
                <button type="button" class="btn btn-success" id="confirmPaymentBtn">
                    <i class="fas fa-check"></i> Ödemeyi Onayla
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Ödeme Başarılı Modal -->
<div class="modal fade" id="paymentSuccessModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title">
                    <i class="fas fa-check-circle"></i> Ödeme Başarılı
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body text-center">
                <i class="fas fa-check-circle fa-5x text-success mb-4"></i>
                <h4 class="text-success">Ödeme Başarıyla Tamamlandı!</h4>
                <p class="lead" id="successMessage">Faturanız başarıyla ödendi.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal" onclick="location.reload()">
                    <i class="fas fa-sync"></i> Sayfayı Yenile
                </button>
                <a href="@Url.Action("FaturaOdemeRaporlari", "Raporlar")" class="btn btn-info">
                    <i class="fas fa-history"></i> Ödeme Geçmişi
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    let currentInvoices = [];

    // Form submit
    $('#invoiceQueryForm').on('submit', function(e) {
        e.preventDefault();
        queryInvoices();
    });

    // Fatura sorgulama
    function queryInvoices() {
        const companyId = $('#companySelect').val();
        const accessNo = $('#accessNo').val().trim();

        if (!companyId || !accessNo) {
            showAlert('warning', 'Lütfen şirket seçin ve abone numarası girin!');
            return;
        }

        // UI güncelle
        $('#loadingSpinner').show();
        $('#invoiceResults').hide();
        $('#noResults').hide();
        $('#queryButton').prop('disabled', true).html('<i class="fas fa-spinner fa-spin"></i> Sorgulanıyor...');

        const data = {
            CompanyId: companyId,
            AccessNo: accessNo
        };

        $.ajax({
            url: '@Url.Action("QueryInvoices")',
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(data),
            success: function(response) {
                $('#loadingSpinner').hide();
                $('#queryButton').prop('disabled', false).html('<i class="fas fa-search"></i> Sorgula');

                if (response.success) {
                    if (response.data && response.data.length > 0) {
                        currentInvoices = response.data;
                        displayInvoices(response.data);
                        showAlert('success', response.message);
                    } else {
                        $('#noResults').show();
                        showAlert('info', response.message || 'Fatura bulunamadı');
                    }
                } else {
                    showAlert('danger', response.message || 'Fatura sorgulaması başarısız');
                }
            },
            error: function() {
                $('#loadingSpinner').hide();
                $('#queryButton').prop('disabled', false).html('<i class="fas fa-search"></i> Sorgula');
                showAlert('danger', 'Bağlantı hatası oluştu!');
            }
        });
    }

    // Faturaları tabloda göster
    function displayInvoices(invoices) {
        let tableBody = '';

        invoices.forEach(function(invoice, index) {
            const amount = parseFloat(invoice.amount) || 0;
            
            const formattedAmount = new Intl.NumberFormat('tr-TR', {
                style: 'currency',
                currency: 'TRY'
            }).format(amount);

            const dueDate = formatDate(invoice.dueDate);

            tableBody += `
                <tr>
                    <td><strong class="text-primary">${invoice.companyName}</strong></td>
                    <td>${invoice.description}</td>
                    <td><strong class="text-success">${formattedAmount}</strong></td>
                    <td><span class="badge bg-info">${dueDate}</span></td>
                    <td><span class="badge bg-warning">Ödenmemiş</span></td>
                    <td>
                        <button type="button" class="btn btn-sm btn-success" 
                                onclick="showPaymentModal('${invoice.id}', '${invoice.companyName}', '${invoice.description}', '${invoice.accessNo}', '${dueDate}', ${amount})">
                            <i class="fas fa-credit-card"></i> Öde
                        </button>
                    </td>
                </tr>
            `;
        });

        $('#invoiceTableBody').html(tableBody);
        $('#invoiceCount').text(invoices.length);
        $('#invoiceResults').show();
    }

    // Ödeme modalını göster
    function showPaymentModal(invoiceId, companyName, description, accessNo, dueDate, amount) {
        $('#selectedInvoiceId').val(invoiceId);
        $('#paymentCompany').text(companyName);
        $('#paymentDescription').text(description);
        $('#paymentAccessNo').text(accessNo);
        $('#paymentDueDate').text(dueDate);
        
        const formattedAmount = new Intl.NumberFormat('tr-TR', {
            style: 'currency',
            currency: 'TRY'
        }).format(amount);
        $('#paymentAmount').text(formattedAmount);

        // Kredi durumunu güncelle
        updateCreditDisplay(amount);

        $('#paymentModal').modal('show');
    }

    // Kredi durumu güncelle
    function updateCreditDisplay(invoiceAmount) {
        $.ajax({
            url: '@Url.Action("GetCreditStatus")',
            type: 'GET',
            success: function(response) {
                if (response.success && response.data) {
                    // Bayi durumu kontrolü
                    if (response.data.dealerStatus && response.data.dealerStatus !== 'aktif') {
                        $('#confirmPaymentBtn').prop('disabled', true).html('<i class="fas fa-ban"></i> Bayi Pasif');
                        
                        // Bayi pasif uyarısı göster
                        showAlert('warning', `Bayi pasif durumda: ${response.data.dealerName}. Fatura ödeme işlemi yapılamaz.`);
                        return;
                    }
                    
                    const currentCredit = response.data.currentCredit;
                    const remainingCredit = currentCredit - invoiceAmount;

                    // Yetersiz kredi kontrolü
                    if (remainingCredit < 0) {
                        $('#confirmPaymentBtn').prop('disabled', true).html('<i class="fas fa-times"></i> Yetersiz Kredi');
                    } else {
                        $('#confirmPaymentBtn').prop('disabled', false).html('<i class="fas fa-check"></i> Ödemeyi Onayla');
                    }
                }
            },
            error: function(xhr) {
                // Bayi pasif durumu için özel hata mesajı
                if (xhr.responseJSON && xhr.responseJSON.message && xhr.responseJSON.message.includes('Bayi pasif durumda')) {
                    $('#confirmPaymentBtn').prop('disabled', true).html('<i class="fas fa-ban"></i> Bayi Pasif');
                    showAlert('warning', xhr.responseJSON.message);
                } else {
                    $('#confirmPaymentBtn').prop('disabled', true).html('<i class="fas fa-exclamation-triangle"></i> Hata');
                }
            }
        });
    }

    // Ödeme onayı
    $('#confirmPaymentBtn').on('click', function() {
        const invoiceId = $('#selectedInvoiceId').val();
        if (!invoiceId) return;

        $(this).prop('disabled', true).html('<i class="fas fa-spinner fa-spin"></i> Ödeniyor...');

        const data = { InvoiceId: invoiceId };

        $.ajax({
            url: '@Url.Action("PayInvoice")',
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(data),
            success: function(response) {
                $('#confirmPaymentBtn').prop('disabled', false).html('<i class="fas fa-check"></i> Ödemeyi Onayla');

                if (response.success) {
                    $('#paymentModal').modal('hide');
                    
                    // Başarı modalını göster
                    $('#successMessage').text(response.message);
                    
                    $('#paymentSuccessModal').modal('show');
                    
                    // Kredi durumunu güncelle
                    updateHeaderCredit(response.data.remainingCredit);
                } else {
                    showAlert('danger', response.message || 'Ödeme işlemi başarısız');
                }
            },
            error: function() {
                $('#confirmPaymentBtn').prop('disabled', false).html('<i class="fas fa-check"></i> Ödemeyi Onayla');
                showAlert('danger', 'Ödeme işlemi sırasında hata oluştu!');
            }
        });
    });

    // Header'daki kredi durumunu güncelle
    function updateHeaderCredit(newCredit) {
        const formattedCredit = new Intl.NumberFormat('tr-TR', {
            style: 'currency',
            currency: 'TRY'
        }).format(newCredit);
        $('#currentCreditDisplay').text(formattedCredit);
    }

    // Tarih formatlama
    function formatDate(dateString) {
        try {
            const date = new Date(dateString);
            return date.toLocaleDateString('tr-TR');
        } catch (e) {
            return dateString;
        }
    }

    // Alert gösterme
    function showAlert(type, message) {
        const alertClass = type === 'danger' ? 'danger' : type === 'success' ? 'success' : type === 'warning' ? 'warning' : 'info';
        const iconClass = type === 'success' ? 'check-circle' : type === 'danger' ? 'exclamation-triangle' : 'info-circle';
        
        const alertHtml = `
            <div class="alert alert-${alertClass} alert-dismissible fade show" role="alert">
                <i class="fas fa-${iconClass}"></i> ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        `;
        
        $('#alertContainer').html(alertHtml);

        // Auto dismiss after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut();
        }, 5000);
    }

    // Input sadece rakam
    $('#accessNo').on('input', function() {
        this.value = this.value.replace(/[^0-9]/g, '');
    });

    // Sayfa yüklendiğinde bayi durumu kontrolü
    $(document).ready(function() {
        checkDealerStatus();
    });

    // Bayi durumu kontrolü
    function checkDealerStatus() {
        $.ajax({
            url: '@Url.Action("GetCreditStatus")',
            type: 'GET',
            success: function(response) {
                if (response.success && response.data) {
                    if (response.data.dealerStatus && response.data.dealerStatus !== 'aktif') {
                        showAlert('warning', `Bayi pasif durumda: ${response.data.dealerName}. Fatura ödeme işlemi yapılamaz.`);
                        
                        // Kredi kartını pasif durumda göster
                        $('.card.border-info').removeClass('border-info').addClass('border-warning');
                        $('#currentCreditDisplay').html('<span class="text-warning"><i class="fas fa-ban"></i> Pasif</span>');
                    }
                }
            },
            error: function(xhr) {
                if (xhr.responseJSON && xhr.responseJSON.message && xhr.responseJSON.message.includes('Bayi pasif durumda')) {
                    showAlert('warning', xhr.responseJSON.message);
                    
                    // Kredi kartını pasif durumda göster
                    $('.card.border-info').removeClass('border-info').addClass('border-warning');
                    $('#currentCreditDisplay').html('<span class="text-warning"><i class="fas fa-ban"></i> Pasif</span>');
                }
            }
        });
    }
</script>
}