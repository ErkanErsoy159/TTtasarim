@model List<TTtasarim.Web.Models.FaturaViewModel>

@{
    ViewData["Title"] = "Fatura Listesi";
}

<h2 class="mt-4 mb-3">Fatura Listesi</h2>

@if (ViewBag.Hata != null)
{
    <div class="alert alert-danger">@ViewBag.Hata</div>
}
else if (Model.Count == 0)
{
    <div class="alert alert-info">Henüz fatura bulunamadı.</div>
}
else
{
    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Abone No</th>
                <th>Şirket</th>
                <th>Tutar</th>
                <th>Durum</th>
                <th>Tarih</th>
                <th>İşlem</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var fatura in Model)
            {
                <tr>
                    <td>@fatura.AboneNo</td>
                    <td>@fatura.SirketAdi</td>
                    <td>@fatura.Tutar ₺</td>
                    <td>
                        @(fatura.OdendiMi ? "Ödendi" : "Bekliyor")
                    </td>
                    <td>@fatura.OlusturulmaTarihi.ToString("dd.MM.yyyy HH:mm")</td>
                    <td>
                        @if (!fatura.OdendiMi)
                        {
                            <a class="btn btn-sm btn-success" href="#">Ödeme Yap</a>
                        }
                        else
                        {
                            <span class="text-muted">✔</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
