@model List<TTtasarim.Web.Models.BayiViewModel>

@{
    ViewData["Title"] = "Bayi Yönetimi";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-store"></i> Bayi Yönetimi</h2>
                <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addDealerModal">
                    <i class="fas fa-plus"></i> Yeni Bayi Ekle
                </button>
            </div>

            <!-- Hata Mesajları -->
            @if (ViewBag.Hata != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle"></i> @ViewBag.Hata
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Success/Error Messages -->
            <div id="alertContainer"></div>

            <!-- Bayi Listesi -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Kayıtlı Bayiler</h5>
                </div>
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Bayi Kodu</th>
                                        <th>Bayi Adı</th>
                                        <th>Durum</th>
                                        <th>Kredi Durumu</th>
                                        <th>Mevcut Kredi</th>
                                        <th>Oluşturulma</th>
                                        <th width="200">İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var bayi in Model)
                                    {
                                        <tr class="@(bayi.Status != "aktif" ? "table-warning" : "")" data-dealer-id="@bayi.Id">
                                            <td>
                                                <strong class="text-primary">@bayi.Code</strong>
                                            </td>
                                            <td>@bayi.Name</td>
                                            <td>
                                                @if (bayi.Status == "aktif")
                                                {
                                                    <span class="badge bg-success">Aktif</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Pasif</span>
                                                }
                                            </td>
                                            <td>
                                                @if (bayi.Status != "aktif")
                                                {
                                                    <span class="badge bg-secondary">Pasif Bayi</span>
                                                }
                                                else if (bayi.HasCredit)
                                                {
                                                    <span class="badge bg-info">Kredi Var</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning">Kredi Yok</span>
                                                }
                                            </td>
                                            <td>
                                                @if (bayi.Status != "aktif")
                                                {
                                                    <strong class="text-muted">
                                                        <i class="fas fa-ban"></i> Pasif
                                                    </strong>
                                                }
                                                else
                                                {
                                                    <strong class="text-success">
                                                        @bayi.CurrentCredit.ToString("C", new System.Globalization.CultureInfo("tr-TR"))
                                                    </strong>
                                                }
                                            </td>
                                            <td>@bayi.CreatedAt.ToString("dd.MM.yyyy")</td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <button type="button" class="btn btn-sm @(bayi.Status != "aktif" ? "btn-warning" : "btn-primary")" 
                                                            onclick="editDealer('@bayi.Id', '@bayi.Code', '@bayi.Name', '@bayi.Status')"
                                                            title="@(bayi.Status != "aktif" ? "Pasif bayiyi aktif hale getir" : "Bayiyi düzenle")">
                                                        <i class="fas @(bayi.Status != "aktif" ? "fa-toggle-on" : "fa-edit")"></i>
                                                    </button>
                                                    <button type="button" class="btn btn-sm btn-info" 
                                                            onclick="updateCredit('@bayi.Id', '@bayi.Name', @bayi.CurrentCredit)"
                                                            title="@(bayi.Status != "aktif" ? "Pasif bayi için kredi güncelle" : "Kredi güncelle")">
                                                        <i class="fas fa-coins"></i>
                                                    </button>
                                                    <button type="button" class="btn btn-sm btn-danger" 
                                                            onclick="deleteDealer('@bayi.Id', '@bayi.Name')">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-store fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Henüz bayi kaydı bulunmuyor</h5>
                            <p class="text-muted">Yeni bayi eklemek için yukarıdaki butonu kullanın.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Yeni Bayi Ekleme Modal -->
<div class="modal fade" id="addDealerModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-plus"></i> Yeni Bayi Ekle
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="addDealerForm">
                    <div class="mb-3">
                        <label for="addCode" class="form-label">Bayi Kodu *</label>
                        <input type="text" class="form-control" id="addCode" required>
                        <div class="form-text">Örn: BAY001, ANK001 vb.</div>
                    </div>
                    <div class="mb-3">
                        <label for="addName" class="form-label">Bayi Adı *</label>
                        <input type="text" class="form-control" id="addName" required>
                    </div>
                    <div class="mb-3">
                        <label for="addStatus" class="form-label">Durum</label>
                        <select class="form-select" id="addStatus">
                            <option value="aktif">Aktif</option>
                            <option value="pasif">Pasif</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <button type="button" class="btn btn-success" onclick="addDealer()">
                    <i class="fas fa-save"></i> Kaydet
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Bayi Düzenleme Modal -->
<div class="modal fade" id="editDealerModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-edit"></i> Bayi Düzenle
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="editDealerForm">
                    <input type="hidden" id="editId">
                    <div class="mb-3">
                        <label for="editCode" class="form-label">Bayi Kodu *</label>
                        <input type="text" class="form-control" id="editCode" required>
                    </div>
                    <div class="mb-3">
                        <label for="editName" class="form-label">Bayi Adı *</label>
                        <input type="text" class="form-control" id="editName" required>
                    </div>
                    <div class="mb-3">
                        <label for="editStatus" class="form-label">Durum</label>
                        <select class="form-select" id="editStatus">
                            <option value="aktif">Aktif</option>
                            <option value="pasif">Pasif</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <button type="button" class="btn btn-primary" onclick="updateDealer()">
                    <i class="fas fa-save"></i> Güncelle
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Kredi Güncelleme Modal -->
<div class="modal fade" id="updateCreditModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-coins"></i> Kredi Güncelle
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="updateCreditForm">
                    <input type="hidden" id="creditDealerId">
                    <div class="mb-3">
                        <label class="form-label">Bayi</label>
                        <input type="text" class="form-control" id="creditDealerName" readonly>
                    </div>
                    <div class="mb-3">
                        <label for="creditAmount" class="form-label">Yeni Kredi Tutarı *</label>
                        <div class="input-group">
                            <span class="input-group-text">₺</span>
                            <input type="number" class="form-control" id="creditAmount" 
                                   step="0.01" min="0" required>
                        </div>
                        <div class="form-text">
                            <strong>Mevcut kredi:</strong> <span id="currentCreditAmount" class="text-primary"></span>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <button type="button" class="btn btn-info" onclick="submitCreditUpdate()">
                    <i class="fas fa-coins"></i> Kredi Güncelle
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    // Yeni bayi ekleme
    function addDealer() {
        const code = $('#addCode').val().trim();
        const name = $('#addName').val().trim();
        const status = $('#addStatus').val();

        if (!code || !name) {
            showAlert('danger', 'Bayi kodu ve adı zorunludur!');
            return;
        }

        const data = {
            Code: code,
            Name: name,
            Status: status
        };

        $.ajax({
            url: '@Url.Action("AddDealer")',
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(data),
            success: function(response) {
                if (response.success) {
                    $('#addDealerModal').modal('hide');
                    showAlert('success', response.message);
                    setTimeout(function() {
                        location.reload();
                    }, 1500);
                } else {
                    showAlert('danger', response.message);
                }
            },
            error: function() {
                showAlert('danger', 'Bir hata oluştu!');
            }
        });
    }

    // Bayi düzenleme modal açma
    function editDealer(id, code, name, status) {
        $('#editId').val(id);
        $('#editCode').val(code);
        $('#editName').val(name);
        $('#editStatus').val(status).data('original-status', status);
        
        // Modal başlığını ve buton metnini duruma göre güncelle
        if (status === 'pasif') {
            $('.modal-title').html('<i class="fas fa-toggle-on"></i> Pasif Bayiyi Aktif Hale Getir');
            $('.modal-footer .btn-primary').html('<i class="fas fa-toggle-on"></i> Aktif Hale Getir');
        } else {
            $('.modal-title').html('<i class="fas fa-edit"></i> Bayi Düzenle');
            $('.modal-footer .btn-primary').html('<i class="fas fa-save"></i> Güncelle');
        }
        
        $('#editDealerModal').modal('show');
    }

    // Bayi güncelleme
    function updateDealer() {
        const id = $('#editId').val();
        const code = $('#editCode').val().trim();
        const name = $('#editName').val().trim();
        const status = $('#editStatus').val();

        if (!code || !name) {
            showAlert('danger', 'Bayi kodu ve adı zorunludur!');
            return;
        }

        const data = {
            Id: id,
            Code: code,
            Name: name,
            Status: status
        };

        $.ajax({
            url: '@Url.Action("UpdateDealer")',
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(data),
            success: function(response) {
                if (response.success) {
                    $('#editDealerModal').modal('hide');
                    
                    // Duruma göre farklı mesaj göster
                    let message = response.message;
                    if (status === 'aktif' && $('#editStatus').data('original-status') === 'pasif') {
                        message = 'Bayi başarıyla aktif hale getirildi!';
                    }
                    
                    showAlert('success', message);
                    setTimeout(function() {
                        location.reload();
                    }, 1500);
                } else {
                    showAlert('danger', response.message);
                }
            },
            error: function() {
                showAlert('danger', 'Bir hata oluştu!');
            }
        });
    }

    // Kredi güncelleme modal açma
    function updateCredit(dealerId, dealerName, currentCredit) {
        $('#creditDealerId').val(dealerId);
        $('#creditDealerId').data('current-credit', currentCredit);
        $('#creditDealerName').val(dealerName);
        $('#creditAmount').val(currentCredit);
        $('#currentCreditAmount').text('₺' + currentCredit.toLocaleString('tr-TR', {
            minimumFractionDigits: 2,
            maximumFractionDigits: 2
        }));
        
        // Pasif bayi için farklı başlık göster
        const dealerRow = $(`tr[data-dealer-id="${dealerId}"]`);
        const isPassive = dealerRow.find('.badge.bg-danger').length > 0;
        
        if (isPassive) {
            $('.modal-title').html('<i class="fas fa-coins"></i> Pasif Bayi Kredisi Güncelle');
            $('.modal-footer .btn-info').html('<i class="fas fa-coins"></i> Kredi Güncelle (Pasif)');
        } else {
            $('.modal-title').html('<i class="fas fa-coins"></i> Kredi Güncelle');
            $('.modal-footer .btn-info').html('<i class="fas fa-coins"></i> Kredi Güncelle');
        }
        
        $('#updateCreditModal').modal('show');
    }

    // Kredi güncelleme
    function submitCreditUpdate() {
        const dealerId = $('#creditDealerId').val();
        const newAmount = parseFloat($('#creditAmount').val());
        const currentAmount = parseFloat($('#creditDealerId').data('current-credit') || 0);

        if (isNaN(newAmount) || newAmount < 0) {
            showAlert('danger', 'Geçerli bir tutar girin!');
            return;
        }

        const data = {
            DealerId: dealerId,
            Amount: newAmount
        };

        $.ajax({
            url: '@Url.Action("UpdateCredit")',
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(data),
            success: function(response) {
                if (response.success) {
                    $('#updateCreditModal').modal('hide');
                    
                    // Pasif bayi için farklı mesaj göster
                    const dealerRow = $(`tr[data-dealer-id="${dealerId}"]`);
                    const isPassive = dealerRow.find('.badge.bg-danger').length > 0;
                    
                    let message = response.message;
                    if (isPassive) {
                        message = 'Pasif bayi kredisi başarıyla güncellendi!';
                    }
                    
                    showAlert('success', message);
                    setTimeout(function() {
                        location.reload();
                    }, 1500);
                } else {
                    showAlert('danger', response.message);
                }
            },
            error: function() {
                showAlert('danger', 'Bir hata oluştu!');
            }
        });
    }

    // Bayi silme
    function deleteDealer(id, name) {
        if (!confirm(`"${name}" adlı bayiyi silmek istediğinizden emin misiniz?`)) {
            return;
        }

        const data = { Id: id };

        $.ajax({
            url: '@Url.Action("DeleteDealer")',
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(data),
            success: function(response) {
                if (response.success) {
                    showAlert('success', response.message);
                    setTimeout(function() {
                        location.reload();
                    }, 1500);
                } else {
                    showAlert('danger', response.message);
                }
            },
            error: function() {
                showAlert('danger', 'Bir hata oluştu!');
            }
        });
    }

    // Alert gösterme helper
    function showAlert(type, message) {
        const alertHtml = `
            <div class="alert alert-${type} alert-dismissible fade show" role="alert">
                <i class="fas fa-${type === 'success' ? 'check-circle' : 'exclamation-triangle'}"></i>
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        `;
        $('#alertContainer').html(alertHtml);

        // Auto dismiss after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut();
        }, 5000);
    }

    // Form resetleme
    $('#addDealerModal').on('hidden.bs.modal', function() {
        $('#addDealerForm')[0].reset();
    });
</script>
}
