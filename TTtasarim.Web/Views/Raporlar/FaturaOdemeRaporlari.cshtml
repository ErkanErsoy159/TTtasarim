@{
    ViewData["Title"] = ViewBag.IsAdmin == true ? "Fatura Ödeme Raporları" : "Ödeme Geçmişi";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>
                    <i class="fas fa-file-invoice-dollar"></i> 
                    @if (ViewBag.IsAdmin == true)
                    {
                        <span>Fatura Ödeme Raporları</span>
                    }
                    else
                    {
                        <span>Ödeme Geçmişi</span>
                    }
                </h2>
                <a href="@Url.Action("Index")" class="btn btn-primary">
                    <i class="fas fa-arrow-left"></i> Raporlar
                </a>
            </div>

            <!-- Hata Mesajları -->
            @if (ViewBag.Hata != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle"></i> @ViewBag.Hata
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }



            <!-- Fatura Ödeme Raporları Tablosu -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-list"></i> 
                        @if (ViewBag.IsAdmin == true)
                        {
                            <span>Ödeme İşlemleri</span>
                        }
                        else
                        {
                            <span>Ödeme Geçmişiniz</span>
                        }
                        @if (ViewBag.Message != null)
                        {
                            <small class="text-muted">(@ViewBag.Message)</small>
                        }
                    </h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.PaymentHistory != null && ((List<dynamic>)ViewBag.PaymentHistory).Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th><i class="fas fa-calendar"></i> Tarih</th>
                                        <th><i class="fas fa-building"></i> Şirket</th>
                                        <th><i class="fas fa-phone"></i> Abone No</th>
                                        <th><i class="fas fa-lira-sign"></i> Tutar</th>
                                        @if (ViewBag.IsAdmin == true)
                                        {
                                            <th><i class="fas fa-user"></i> Kullanıcı</th>
                                        }
                                        <th><i class="fas fa-store"></i> Bayi</th>
                                        <th><i class="fas fa-receipt"></i> İşlem ID</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var payment in (List<dynamic>)ViewBag.PaymentHistory)
                                    {
                                        <tr>
                                            <td>
                                                <span class="badge bg-info">@(((dynamic)payment).transactionDate.ToString())</span>
                                            </td>
                                            <td>
                                                <strong class="text-primary">@(((dynamic)payment).companyName.ToString())</strong>
                                            </td>
                                            <td>
                                                <code>@(((dynamic)payment).accessNo.ToString())</code>
                                            </td>
                                            <td>
                                                <strong class="text-success">
                                                    @{
                                                        string formattedAmount;
                                                        try 
                                                        {
                                                            var amount = ((dynamic)payment).amount;
                                                            var decimalAmount = Convert.ToDecimal(amount ?? 0);
                                                            formattedAmount = decimalAmount.ToString("C2", new System.Globalization.CultureInfo("tr-TR"));
                                                        }
                                                        catch
                                                        {
                                                            formattedAmount = "₺0,00";
                                                        }
                                                    }
                                                    @formattedAmount
                                                </strong>
                                            </td>
                                            @if (ViewBag.IsAdmin == true)
                                            {
                                                <td>
                                                    @if (((dynamic)payment).userName != null)
                                                    {
                                                        <strong class="text-primary">@(((dynamic)payment).userName.ToString())</strong>
                                                        <small class="text-muted d-block">@(((dynamic)payment).userEmail.ToString())</small>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">Kullanıcı Bilgisi Yok</span>
                                                    }
                                                </td>
                                            }
                                            <td>
                                                <span class="badge bg-secondary">@(((dynamic)payment).dealerName.ToString())</span>
                                            </td>
                                            <td>
                                                <small class="text-muted font-monospace">
                                                    @(((dynamic)payment).id.ToString().Substring(0, 8))...
                                                </small>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div class="mt-3">
                            <small class="text-muted">
                                @if (ViewBag.IsAdmin == true)
                                {
                                    <span>Son 100 işlem gösterilmektedir</span>
                                }
                                else
                                {
                                    <span>Son 50 işlem gösterilmektedir</span>
                                }
                            </small>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-receipt fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">
                                @if (ViewBag.IsAdmin == true)
                                {
                                    <span>Henüz ödeme kaydı bulunmuyor</span>
                                }
                                else
                                {
                                    <span>Henüz ödeme geçmişiniz bulunmuyor</span>
                                }
                            </h5>
                            <p class="text-muted">
                                @if (ViewBag.IsAdmin == true)
                                {
                                    <span>İlk fatura ödemeniz yapıldığında buraya kaydedilecektir.</span>
                                }
                                else
                                {
                                    <span>İlk fatura ödemenizi yaptığınızda buraya kaydedilecektir.</span>
                                }
                            </p>
                            <a href="@Url.Action("Index", "Faturalar")" class="btn btn-primary">
                                <i class="fas fa-search"></i> Fatura Sorgula
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    // Tablo sıralama (basit)
    document.querySelectorAll('th').forEach(header => {
        header.style.cursor = 'pointer';
        header.addEventListener('click', function() {
            const table = this.closest('table');
            const tbody = table.querySelector('tbody');
            const rows = Array.from(tbody.querySelectorAll('tr'));
            const index = Array.from(this.parentNode.children).indexOf(this);
            
            const sortedRows = rows.sort((a, b) => {
                const aText = a.children[index].textContent.trim();
                const bText = b.children[index].textContent.trim();
                return aText.localeCompare(bText, 'tr', { numeric: true });
            });
            
            // Toggle sort direction
            if (this.classList.contains('sorted-asc')) {
                sortedRows.reverse();
                this.classList.remove('sorted-asc');
                this.classList.add('sorted-desc');
            } else {
                this.classList.remove('sorted-desc');
                this.classList.add('sorted-asc');
            }
            
            // Clear other headers
            this.parentNode.querySelectorAll('th').forEach(th => {
                if (th !== this) {
                    th.classList.remove('sorted-asc', 'sorted-desc');
                }
            });
            
            // Re-append sorted rows
            sortedRows.forEach(row => tbody.appendChild(row));
        });
    });
</script>

<style>
    th.sorted-asc::after {
        content: ' ↑';
        color: #007bff;
    }
    th.sorted-desc::after {
        content: ' ↓';
        color: #007bff;
    }
</style>
}