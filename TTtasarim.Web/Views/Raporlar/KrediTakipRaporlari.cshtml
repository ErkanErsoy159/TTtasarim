@{
    ViewData["Title"] = "Kredi Takip Raporları";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-coins"></i> Kredi Takip Raporları</h2>
                <a href="@Url.Action("Index")" class="btn btn-primary">
                    <i class="fas fa-arrow-left"></i> Raporlar
                </a>
            </div>

            <!-- Hata Mesajları -->
            @if (ViewBag.Hata != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle"></i> @ViewBag.Hata
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }



            <!-- Kredi Hareketleri Tablosu -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-history"></i> Kredi Hareketleri
                    </h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.CreditLogs != null && ((List<dynamic>)ViewBag.CreditLogs).Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th><i class="fas fa-calendar"></i> Tarih</th>
                                        <th><i class="fas fa-store"></i> Bayi</th>
                                        <th><i class="fas fa-lira-sign"></i> Tutar</th>
                                        <th><i class="fas fa-tags"></i> İşlem Türü</th>
                                        <th><i class="fas fa-credit-card"></i> Kredi ID</th>
                                        <th><i class="fas fa-receipt"></i> Log ID</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var log in (List<dynamic>)ViewBag.CreditLogs)
                                    {
                                        <tr>
                                            <td>
                                                <span class="badge bg-info">@(((dynamic)log).createdAt.ToString())</span>
                                            </td>
                                            <td>
                                                @if (((dynamic)log).dealerInfo != null)
                                                {
                                                    <strong class="text-primary">@(((dynamic)log).dealerInfo.dealerName.ToString())</strong>
                                                    <small class="text-muted d-block">@(((dynamic)log).dealerInfo.dealerCode.ToString())</small>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Bayi Bilgisi Yok</span>
                                                }
                                            </td>
                                            <td>
                                                @{
                                                    string formattedLogAmount;
                                                    string operationType;
                                                    try 
                                                    {
                                                        var logAmount = ((dynamic)log).amount;
                                                        var decimalLogAmount = Convert.ToDecimal(logAmount ?? 0);
                                                        formattedLogAmount = decimalLogAmount.ToString("C2", new System.Globalization.CultureInfo("tr-TR"));
                                                        operationType = ((dynamic)log).operationType?.ToString() ?? "";
                                                    }
                                                    catch
                                                    {
                                                        formattedLogAmount = "₺0,00";
                                                        operationType = "";
                                                    }
                                                }
                                                @if (operationType == "kredi_arttir" || operationType == "admin_arttirma")
                                                {
                                                    <strong class="text-success">
                                                        +@formattedLogAmount
                                                    </strong>
                                                }
                                                else if (operationType == "admin_azaltma")
                                                {
                                                    <strong class="text-danger">
                                                        -@formattedLogAmount
                                                    </strong>
                                                }
                                                else
                                                {
                                                    <strong class="text-danger">
                                                        -@formattedLogAmount
                                                    </strong>
                                                }
                                            </td>
                                            <td>
                                                @if (operationType == "kredi_arttir")
                                                {
                                                    <span class="badge bg-success">Kredi Arttırma</span>
                                                }
                                                else if (operationType == "fatura_odeme")
                                                {
                                                    <span class="badge bg-warning">Fatura Ödeme</span>
                                                }
                                                else if (operationType == "admin_arttirma")
                                                {
                                                    <span class="badge bg-info">Admin Arttırma</span>
                                                }
                                                else if (operationType == "admin_azaltma")
                                                {
                                                    <span class="badge bg-danger">Admin Azaltma</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">@operationType</span>
                                                }
                                            </td>
                                            <td>
                                                <small class="text-muted font-monospace">
                                                    @(((dynamic)log).creditId.ToString().Substring(0, 8))...
                                                </small>
                                            </td>
                                            <td>
                                                <small class="text-muted font-monospace">
                                                    @(((dynamic)log).id.ToString().Substring(0, 8))...
                                                </small>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div class="mt-3">
                            <small class="text-muted">
                                Tüm kredi hareketleri gösterilmektedir
                            </small>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-coins fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Henüz kredi hareketi bulunmuyor</h5>
                            <p class="text-muted">
                                İlk kredi işlemi yapıldığında buraya kaydedilecektir.
                            </p>
                            <a href="@Url.Action("Index", "Bayiler")" class="btn btn-primary">
                                <i class="fas fa-store"></i> Bayi Yönetimi
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    // Tablo sıralama (basit)
    document.querySelectorAll('th').forEach(header => {
        header.style.cursor = 'pointer';
        header.addEventListener('click', function() {
            const table = this.closest('table');
            const tbody = table.querySelector('tbody');
            const rows = Array.from(tbody.querySelectorAll('tr'));
            const index = Array.from(this.parentNode.children).indexOf(this);
            
            const sortedRows = rows.sort((a, b) => {
                const aText = a.children[index].textContent.trim();
                const bText = b.children[index].textContent.trim();
                return aText.localeCompare(bText, 'tr', { numeric: true });
            });
            
            // Toggle sort direction
            if (this.classList.contains('sorted-asc')) {
                sortedRows.reverse();
                this.classList.remove('sorted-asc');
                this.classList.add('sorted-desc');
            } else {
                this.classList.remove('sorted-desc');
                this.classList.add('sorted-asc');
            }
            
            // Clear other headers
            this.parentNode.querySelectorAll('th').forEach(th => {
                if (th !== this) {
                    th.classList.remove('sorted-asc', 'sorted-desc');
                }
            });
            
            // Re-append sorted rows
            sortedRows.forEach(row => tbody.appendChild(row));
        });
    });
</script>

<style>
    th.sorted-asc::after {
        content: ' ↑';
        color: #007bff;
    }
    th.sorted-desc::after {
        content: ' ↓';
        color: #007bff;
    }
</style>
}